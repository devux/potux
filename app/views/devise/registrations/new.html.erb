<meta name="viewport" content="width=device-width, initial-scale=1">
<%= render "devise/shared/about" %>

<div class="row">
  <div class="col s12 m12">
    <div class="card yellow-grey darken-1">
      <div class="row">
        <div class="col s12 m4">
        </div>
        <div class="col s12 m4">
          <div class="card yellow-grey darken-1">
            <center>
              <div class="row">
                <%= form_for(resource, :html => {:class => 'col s12'}, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div class="row">
                  <div class="input-field col s12">
                    <%= f.email_field :email, autofocus: true, class: "validate" %>
                    <%= f.label :email %>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <%= f.password_field :password, autocomplete: "off", class: "validate" %>
                    <%= f.label :password %>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <%= f.password_field :password_confirmation, autocomplete: "off", class: "validate" %>
                    <%= f.label :password_confirmation %>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <input id="password" type="password" class="validate">
                    <label for="password">Location</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <input id="email" type="email" class="validate">
                    <label for="email">Phone</label>
                  </div>
                </div>
                <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
                <% end -%>
                <br>
                <div class="actions">
                  <%= f.submit "Signup", class: "waves-effect waves-light btn" %>
                </div>
                <br/>
                <%= link_to 'Forgot Password', new_password_path(resource_name) %>
                <% end %>
                <br>
                <%= render "devise/shared/links" %>
              </div>
            </center>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
