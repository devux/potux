<meta name="viewport" content="width=device-width, initial-scale=1">

<div class="row">
  <div class="col s12 m12">
    <div class="card yellow-grey darken-1">
      <br><br><br><br><br><br><br><br>
      <div class="row">
        <div class="col s12 m4">
        </div>
        <div class="col s12 m4">
          <div class="card yellow-grey darken-1">
            <center>
              <div class="row">
              <%= form_for(resource, :html => {:class => 'col s12'}, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

                <%= devise_error_messages! %>
                <div class="row">
                  <div class="input-field col s12">
                    <%= f.email_field :email, autofocus: true, class: "validate" %>
                    <%= f.label :email %>
                  </div>
                </div>
                <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
                <% end -%>
                <br>
                <div class="actions">
                  <%= f.submit "Reset", class: "waves-effect waves-light btn" %>
                </div>
                <br/>
                <% end %>
                <br>
                <%= render "devise/shared/links" %>
              </div>
            </center>
          </div>
        </div>
      </div>
      <br><br><br><br><br><br><br><br>
    </div>
  </div>
</div>
